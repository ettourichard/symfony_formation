{% extends '::base.html.twig' %}

{% block title %}
    {{post.title}}
{% endblock %}

{% block body %}
    <article id="article_wrapper">
        <section>
            <h2>{{post.title}}<small></small></h2>
            <span style="color: #999;">
                <i class="fa fa-calendar" style="color: black;"></i> {{post.createdAt|date("d/m/Y H:i")}}&nbsp;&nbsp;&nbsp;
                <i class="fa fa-user" style="color: black;"></i>
                {% if post.author %}
                    {{ post.author.username }}
                {% else %}
                    Anonymous
                {% endif %}&nbsp;&nbsp;&nbsp;
                <i class="fa fa-folder" style="color: black;"></i>
                {{post.category.name}}
            </span>
            <br /><br />
            <div class="articleContent">
                {{post.body|raw}}
            </div>
        <section>
        <section>
            <h3>Comments :</h3>



            <div id="comments">
                <div id="commentForm" class="form-group">
                    {{form_start(commentForm)}}

                        {{form_widget(commentForm.name)}}
                        {{form_widget(commentForm.text)}}

                        {{form_errors(commentForm)}}
                    {{form_end(commentForm)}}
                </div>
                {% if post.comments %}
                    {% for comment in post.comments %}
                        <div class="comment">
                            <div class="details">
                                <span class="author">{{comment.name}}</span> <span class="date">{{ comment.createdAt|date("D j F Y H:i:s") }}</span>
                            </div>
                            <p>{{comment.text}}</p>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>No comment in this post</p>
                {% endif %}
            </div>
        </section>

    </article>

{% endblock %}
