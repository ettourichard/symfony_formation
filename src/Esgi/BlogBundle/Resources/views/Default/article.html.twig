{% extends '::base.html.twig' %}

{% block title %}
    {{post.title}}
{% endblock %}

{% block body %}
    <article id="article_wrapper">
        <section>
            <h2>{{post.title}}<small> by {{user.username}}</small></h2>
            <div class="details">
                {{post.createdAt|date("D j F Y H:i:s")}}
            </div>
            <br /><br />
            <div class="articleContent">
                {{post.body|raw}}
            </div>
            <br />
            {{category.name}}
            <p><a href="{{path('blog_index')}}">Retour</a></p>
        <section>
        <section>
            <h3>Comments :</h3>



            <div id="comments">
                <div id="commentForm" class="form-group">
                    {{form_start(commentForm)}}

                        {{form_widget(commentForm.name)}}
                        {{form_widget(commentForm.text)}}

                        {{form_errors(commentForm)}}
                    {{form_end(commentForm)}}
                </div>
                {% if comments %}
                    {% for comment in comments %}
                        <div class="comment">
                            <div class="details">
                                <span class="author">{{comment.name}}</span> <span class="date">{{ comment.createdAt|date("D j F Y H:i:s") }}</span>
                            </div>
                            <p>{{comment.text}}</p>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>No comment in this post</p>
                {% endif %}
            </div>
        </section>

    </article>

{% endblock %}
