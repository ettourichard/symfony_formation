{% extends '::base.html.twig' %}

{% block title %}
    Mon Blog
{% endblock %}

{% block body %}
    <div class="page-header">
      <h1>Recherche : "{{ text }}"</h1>
    </div>
    <div id="listPosts">
        {% for post in posts %}
            <article>

                <a href="{{path('page_article', {slug: post.slug}) }}"> 
                    <h3>{{ post.title|replace({'%consequu%': '<bold>consequu</bold>'}) }}</h3>
                </a>
            </article>
        {% endfor %}
    </div>
{% endblock %}
