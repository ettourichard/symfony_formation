{% extends '::base.html.twig' %}

{% block title %}
    Mon Blog
{% endblock %}

{% block body %}
    <div class="page-header">
      <h1>Articles<small>  {{ posts.getTotalItemCount }} articles</small></h1>
      <p><a href="{{path('blog_propose')}}">Ajouter un article</a></p>
    </div>
    <div id="listPosts">
        {% for post in posts %}
            <article>

                <a href="{{path('page_article', {slug: post.slug}) }}"> 
                    <h3>{{ post.title }}</h3>
                </a>
            </article>
        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}
