{% extends '::base.html.twig' %}

{% block title %}
    Mon Blog
{% endblock %}

{% block body %}
    <div class="page-header">
      <a href="{{path('blog_propose')}}" class="pull-right btn btn-primary" style="margin-top: 10px;">Ajouter un article</a>
      <h1>Articles<small>  {{ posts.getTotalItemCount }} articles</small></h1>
    </div>
    <div id="listPosts" class="form-group">
        {% for post in posts %}
            <article>

                <a href="{{path('page_article', {slug: post.slug}) }}">
                    <h3>{{ post.title }}</h3>
                </a>
            </article>
        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}
