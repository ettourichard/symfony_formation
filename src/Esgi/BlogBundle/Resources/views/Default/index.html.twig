{% extends '::base.html.twig' %}

{% block title %}
    Mon Blog
{% endblock %}

{% block body %}
    {% for post in posts %}
        <article>
            <h2>{{ post.title }}</h2>
            {% for comment in post.comments %}
                <hr />
                {{ comment.text }}
            {% endfor %}
        </article>
    {% endfor %}
{% endblock %}
