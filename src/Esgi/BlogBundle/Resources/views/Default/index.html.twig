{% extends '::base.html.twig' %}

{% block title %}
    Mon Blog
{% endblock %}

{% block body %}
    <div class="page-header">
      <h1>Articles</h1>
    </div>

    {% for post in posts %}
        <article>
            <h2>{{ post.title }}</h2>
            <span>{{ post.body }}</span>
            {% for comment in post.comments %}
                <hr />
                {{ comment.text }}
            {% endfor %}
        </article>
    {% endfor %}
{% endblock %}
